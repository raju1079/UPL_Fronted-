pipeline {
    agent {
        docker {
            image 'node:18-alpine'
            args '-v /var/lib/jenkins/.npm:/root/.npm' // Optional: to persist npm cache
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'npm run deploy'
            }
        }
    }
    post {
        always {
            cleanWs() // Clean up workspace
        }
    }
}
