pipeline {
    agent {
        docker {
            image 'node:18-alpine'
            label 'docker-agent'
        }
    }
    stages {
        stage('build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'npm run deploy'
            }
        }
    }
}
